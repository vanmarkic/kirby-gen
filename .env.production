# Production Environment Configuration
# Copy this file and customize for your production deployment

# API Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
API_BASE_URL=https://your-domain.com

# Claude API (REQUIRED for production)
# Get your API key from https://console.anthropic.com/
CLAUDE_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-opus-4-20250514

# Storage Service
STORAGE_TYPE=local
STORAGE_PATH=/app/data/storage

# Session Service
SESSION_TYPE=local
SESSION_PATH=/app/data/sessions
SESSION_SECRET=CHANGE-THIS-TO-SECURE-RANDOM-STRING

# Deployment Service
DEPLOY_TYPE=local
DEPLOY_BASE_PATH=/app/data/deployments
DEPLOY_BASE_PORT=8000
DEPLOY_BASE_URL=https://your-domain.com

# Git Service
GIT_TYPE=local
GIT_BASE_PATH=/app/data/repos
GIT_USER_NAME=Kirby Generator
GIT_USER_EMAIL=generator@your-domain.com

# Web Interface
VITE_API_URL=https://your-domain.com
VITE_WS_URL=wss://your-domain.com

# Skills Server
SKILLS_PORT=8001
SKILLS_BASE_URL=http://skills:8001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security (IMPORTANT: Enable for production!)
AUTH_ENABLED=true
AUTH_TOKEN=CHANGE-THIS-TO-SECURE-TOKEN
AUTH_TYPE=simple-token
JWT_SECRET=CHANGE-THIS-TO-SECURE-RANDOM-STRING
JWT_EXPIRY=7d

# Rate Limiting (production: strict)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.md,.txt,.pdf,.docx,.doc,.jpg,.jpeg,.png,.gif,.svg

# CORS
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true
