# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/api.log

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./data/uploads

# Storage
STORAGE_DIR=./data/storage
SESSION_DIR=./data/sessions

# Git Configuration
GIT_USER_NAME=Kirby Generator
GIT_USER_EMAIL=generator@kirby-gen.local

# Deployment
DEPLOYMENT_DIR=./data/deployments
DEPLOYMENT_PORT_START=4000

# Skills Server
SKILLS_SERVER_URL=http://localhost:5000
SKILLS_TIMEOUT_MS=300000

# Kirby Generator
KIRBY_GENERATOR_PATH=../kirby-generator

# Authentication (MVP - Simple Token)
# Enable/disable authentication barrier for the application
# Set to 'true' to require password on frontend and validate API requests
# Set to 'false' for local development without authentication
AUTH_ENABLED=false

# Shared password/token for simple authentication
# This is a development-only feature - use same value in frontend VITE_AUTH_TOKEN
# For production: replace with JWT-based authentication
# IMPORTANT: Change this value from default before enabling authentication
AUTH_TOKEN=your-secret-token-here

# WebSocket
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=60000

# Claude AI (Optional - for AI-powered domain mapping)
# Option 1: Use Anthropic API (production)
# Get your API key from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Option 2: Use Claude CLI (local development - no API costs)
# Set CLAUDE_USE_CLI=true to use local Claude CLI instead of API
CLAUDE_USE_CLI=false
CLAUDE_CLI_SCRIPT=./scripts/claude-cli.sh
CLAUDE_CLI_OUTPUT_DIR=./data/claude-output
