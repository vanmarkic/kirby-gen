{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@kirby-gen/shared": ["../shared/src"],
      "@kirby-gen/shared/*": ["../shared/src/*"]
    },
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"],
  "references": [
    { "path": "../shared" }
  ]
}
