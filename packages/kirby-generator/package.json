{
  "name": "@kirby-gen/kirby-generator",
  "version": "0.1.0",
  "private": true,
  "description": "Kirby CMS site generator",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch --tsconfig tsconfig.json src/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "download-kirby": "node scripts/download-kirby.js"
  },
  "dependencies": {
    "@kirby-gen/shared": "*",
    "nanoid": "^5.0.4",
    "yaml": "^2.3.4",
    "fs-extra": "^11.2.0",
    "archiver": "^6.0.1",
    "ejs": "^3.1.9",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/archiver": "^6.0.2",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
