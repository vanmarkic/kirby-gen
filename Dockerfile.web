FROM node:20-alpine AS builder
WORKDIR /app

# Copy root package.json and workspace configs
COPY package*.json ./
COPY tsconfig.json ./

# Copy all package.json files for workspaces
COPY packages/shared/package*.json ./packages/shared/
COPY packages/web/package*.json ./packages/web/

# Install all dependencies including devDependencies (needed for TypeScript build)
# Note: --include=dev ensures devDependencies are installed even when NODE_ENV=production
RUN npm ci --include=dev

# Copy all source code
COPY packages/shared ./packages/shared
COPY packages/web ./packages/web

# Build shared and web packages from root (workspace-aware)
WORKDIR /app
RUN npm --workspace=packages/shared run build --if-present
RUN npm --workspace=packages/web run build:prod

# Production stage
FROM nginx:alpine
COPY --from=builder /app/packages/web/dist /usr/share/nginx/html
COPY packages/web/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 5173
CMD ["nginx", "-g", "daemon off;"]
