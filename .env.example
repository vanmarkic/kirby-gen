# API Configuration
NODE_ENV=local
PORT=3000
API_BASE_URL=http://localhost:3000

# Claude API
# Leave CLAUDE_API_KEY empty to use Claude CLI for local development (no API costs)
# Install CLI: npm install -g @anthropic-ai/claude-code
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-opus-4-20250514

# Storage Service
STORAGE_TYPE=local
STORAGE_PATH=/tmp/kirby-gen/storage

# Session Service
SESSION_TYPE=local
SESSION_PATH=/tmp/kirby-gen/sessions
SESSION_SECRET=your-secret-key-here

# Deployment Service
DEPLOY_TYPE=local
DEPLOY_BASE_PATH=/tmp/kirby-gen/deployments
DEPLOY_BASE_PORT=8000
DEPLOY_BASE_URL=http://localhost

# Git Service
GIT_TYPE=local
GIT_BASE_PATH=/tmp/kirby-gen/repos

# Web Interface
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# Skills Server
SKILLS_PORT=8001
SKILLS_BASE_URL=http://localhost:8001

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Security - Simple Token Authentication (Development)
# Enable authentication barrier to protect the application during development
# When enabled, users must enter password on frontend login page
# All API requests are validated against AUTH_TOKEN
AUTH_ENABLED=false

# Shared password/token for simple authentication
# IMPORTANT: Change this from default before enabling auth
# Must be same value in:
#   - Backend: packages/api/.env → AUTH_TOKEN
#   - Frontend: packages/web/.env → VITE_AUTH_TOKEN
# For production: Replace with JWT-based authentication system
AUTH_TOKEN=

# Authentication type (for future extensibility)
AUTH_TYPE=simple-token

# JWT settings (reserved for future production auth upgrade)
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=7d

# Rate Limiting (local: relaxed)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=.md,.txt,.pdf,.docx,.doc,.jpg,.jpeg,.png,.gif,.svg

# Kirby Demo Settings
KIRBY_DEMO_TTL_DAYS=7
KIRBY_DEMO_MAX_DEMOS=10
KIRBY_DEMO_BASE_PORT=8080
KIRBY_DEMOS_DIR=/tmp/kirby-gen/kirby-demos

# Email Settings
EMAIL_SERVICE=local
EMAIL_FROM=noreply@yourdomain.com
