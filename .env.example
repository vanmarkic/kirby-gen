# API Configuration
NODE_ENV=local
PORT=3000
API_BASE_URL=http://localhost:3000

# Claude API
# Leave CLAUDE_API_KEY empty to use Claude CLI for local development (no API costs)
# Install CLI: npm install -g @anthropic-ai/claude-code
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-opus-4-20250514

# Storage Service
STORAGE_TYPE=local
STORAGE_PATH=/tmp/kirby-gen/storage

# Session Service
SESSION_TYPE=local
SESSION_PATH=/tmp/kirby-gen/sessions
SESSION_SECRET=your-secret-key-here

# Deployment Service
DEPLOY_TYPE=local
DEPLOY_BASE_PATH=/tmp/kirby-gen/deployments
DEPLOY_BASE_PORT=8000
DEPLOY_BASE_URL=http://localhost

# Git Service
GIT_TYPE=local
GIT_BASE_PATH=/tmp/kirby-gen/repos

# Web Interface
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# Skills Server
SKILLS_PORT=8001
SKILLS_BASE_URL=http://localhost:8001

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Security
AUTH_TYPE=simple-token
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=7d

# Rate Limiting (local: relaxed)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=.md,.txt,.pdf,.docx,.doc,.jpg,.jpeg,.png,.gif,.svg
