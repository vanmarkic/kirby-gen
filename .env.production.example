# Production Environment Configuration
# Copy this to .env in production and fill in the values

# API Configuration
NODE_ENV=production
PORT=3000
API_BASE_URL=https://your-domain.com

# Claude API - REQUIRED
CLAUDE_API_KEY=sk-ant-api03-...
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Storage Service
STORAGE_TYPE=local
STORAGE_PATH=/app/data/storage

# Session Service
SESSION_TYPE=local
SESSION_PATH=/app/data/sessions
SESSION_SECRET=CHANGE_ME_TO_RANDOM_STRING

# Deployment Service
DEPLOY_TYPE=local
DEPLOY_BASE_PATH=/app/data/deployments
DEPLOY_BASE_PORT=8000
DEPLOY_BASE_URL=https://your-domain.com

# Git Service
GIT_TYPE=local
GIT_BASE_PATH=/app/data/repos

# Web Interface
VITE_API_URL=https://api.your-domain.com
VITE_WS_URL=wss://api.your-domain.com

# Skills Server (Internal only - Docker network)
SKILLS_SERVER_URL=http://skills:8001
SKILLS_PORT=8001

# Skills Server IP Whitelist
ALLOWED_IPS=172.16.0.0/12,10.0.0.0/8,192.168.0.0/16
ENABLE_IP_WHITELIST=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security - CRITICAL: MUST SET THESE IN PRODUCTION
AUTH_ENABLED=true
AUTH_TOKEN=c1017a6e1737024c2c6d71e87a6febb6d1623e11b61b948759300d59d2a126be
AUTH_TYPE=simple-token
JWT_SECRET=GENERATE_WITH_openssl_rand_hex_32
JWT_EXPIRY=7d

# Rate Limiting (production: strict)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.md,.txt,.pdf,.docx,.doc,.jpg,.jpeg,.png,.gif,.svg

# CORS (production: restrict to your domain)
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true
